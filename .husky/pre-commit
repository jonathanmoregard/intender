#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Block commits on master branch
current_branch=$(git rev-parse --abbrev-ref HEAD)
if [ "$current_branch" = "master" ]; then
  echo "âŒ Direct commits to 'master' are not allowed. Please create a branch and open a PR." >&2
  exit 1
fi

npx lint-staged 