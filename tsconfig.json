{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["webextension-polyfill", "jest", "chrome-types"],
    "paths": {
      "@theme": ["./entrypoints/shared/theme.css"]
    }
  },
  "include": ["src", "entrypoints", "components", "tests", "types"]
}
