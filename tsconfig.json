{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["chrome", "webextension-polyfill", "jest"]
  },
  "include": ["src", "entrypoints", "components", "tests"]
}
